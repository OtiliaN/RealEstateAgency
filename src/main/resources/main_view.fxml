<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="456.0" prefWidth="481.0" style="-fx-background-color: #ffe5e5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.MainViewController">

    <!-- ImobAgency (stânga sus, mic, italic) -->
    <Text fill="#d33636" layoutX="10" layoutY="25" style="-fx-font-size: 14px; -fx-font-style: italic; -fx-font-family: 'Arial';" text="ImobAgency" />

    <!-- Bine ai revenit! (centrat, font Comic Sans MS) -->
    <Text fill="#b85c5c" layoutX="162.0" layoutY="63.0" style="-fx-font-size: 22px; -fx-font-family: 'Comic Sans MS';" text="Bine ai revenit!" />

    <!-- Login (sub titlu, bold, culoare diferită) -->
    <Text fill="#800000" layoutX="216.0" layoutY="113.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Login" />

    <!-- Username -->
    <Label layoutX="90" layoutY="130" text="Username:" />
    <TextField fx:id="usernameField" layoutX="90" layoutY="150" prefWidth="300" />

    <!-- Password -->
    <Label layoutX="90" layoutY="190" text="Parolă:" />
    <PasswordField fx:id="passwordField" layoutX="90" layoutY="210" prefWidth="300" />

    <!-- Login Button -->
    <Button fx:id="loginButton" layoutX="90" layoutY="260" onAction="#handleLogin" prefWidth="300" style="-fx-background-color: #ffb3b3; -fx-text-fill: #800000; -fx-font-size: 16px;" text="Log In" />

    <!-- Error Label -->
    <Label fx:id="errorLabel" layoutX="90" layoutY="305" prefWidth="300" style="-fx-font-weight: bold;" textFill="#d33636" />

    <!-- Sign Up -->
    <Label layoutX="120" layoutY="330" text="Nu ai cont încă?" />
    <Hyperlink layoutX="216.0" layoutY="327.0" onAction="#handleSignUp" style="-fx-text-fill: #d33636;" text="Creează acum (Sign up)" />

    <!-- Admin & Agent Buttons -->
    <Button fx:id="agentButton" layoutX="10" layoutY="376" onAction="#handleAgent" prefWidth="80" style="-fx-background-color: #ffd6d6; -fx-text-fill: #b85c5c;" text="Agent" />
    <Button fx:id="adminButton" layoutX="106.0" layoutY="376.0" onAction="#handleAdmin" prefWidth="80" style="-fx-background-color: #ffd6d6; -fx-text-fill: #b85c5c;" text="Admin" />

</AnchorPane>
